<div class="heading">
    <h3>
        <%= heading %>
    </h3>
</div>
<div class="all-container">
    <div class="input-container">
        <form action="<%=type%>/save" method="POST">
            <div class="form-container">
                <input type="text" class="input-new-task" placeholder="New Task" name="newTask" required>
                <button class="circular-button" id="add-task-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-plus-lg button-icon" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                    </svg>
                </button>
            </div>
        </form>
    </div>

    <div class="tasks-container">
        <% if (locals.tasks) { %>
            <ul id="tasks-list">
                <% tasks.forEach((task, index)=> { %>
                    <li>
                        <div class="task">
                            <div>
                                <input type="checkbox" id="task<%= index %>" class="task-checkbox">
                                <label for="task<%= index %>">
                                    <%= task %>
                                </label>
                            </div>
                            <div>
                                <form action="<%=type%>/delete" method="POST">
                                    <input type="hidden" name="taskToDelete" value="<%= task %>">
                                    <button type="submit" class="delete-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            class="bi bi-trash3-fill trash-icon" viewBox="0 0 16 16">
                                            <path
                                                d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <% } %>
    </div>
</div>